---
import Navbar from '../Header/Navbar/Navbar.astro';
---

<header
  class="w-full h-22 flex justify-between sm:justify-center items-center md:h-32 py-2 md:p-0 fixed top-0 bg-opacity-70 bg-black-400 backdrop-blur-lg z-50 lg:gap-x-24"
>
  <img
    class="rounded-full lg:size-20 lg:w-auto size-16 w-1/3"
    src="VM-logo.svg"
    alt="Victor MiÃ±ope"
  />
  <Navbar />
  <button class="w-1/3 lg:w-auto">Download CV</button>

  <button
    data-collapse-toggle="navbar-default"
    type="button"
    class="inline-flex items-center p-2 w-1/3 h-10 justify-center text-sm text-white-500 rounded-lg sm:hidden hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
    aria-controls="navbar-default"
    aria-expanded="false"
    onclick="document.getElementById('navbar-default').classList.toggle('hidden')"
  >
    <svg
      class="w-5 h-5"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 17 14"
    >
      <path
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M1 1h15M1 7h15M1 13h15"></path>
    </svg>
  </button>
</header>
